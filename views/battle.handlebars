<div id="battle">
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h3 class="text-right text-light"><span id="enemyName"></span></h3>
                    <p class="text-right text-light">HP: <span id="enemyHP"></span></p>
                </div>
                <div class="col-4">
                    <div class="battleCharacters ml-5">
                        <img src="/images/deathEaterIcon.png" class="img-fluid">
                    </div>
                    
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <div class="battleCharacters">
                        <img src="/images/wizardIcon.svg" class="img-fluid" style="max-width: 200%;">
                    </div>
                </div>
                <div class="col-4 pl-5">
                    <h3 class="text-light"><span id="yourName">{{name}}</span></h3>
                    <p class="align-text-bottom ml-0 text-light">HP: <span id="yourHP">{{hitpoints}}</span></p>
                    <p class="rounded text-dark bg-light"> Defense Buff: <span id="yourDefense"></span></p>
                    <p class="rounded text-light bg-info"> Healing Spells Left:<span id="healingCount"></span></p>
                </div>
            </div>
            <div class="row py-3">
                <div id="battleScreenText" class="col border rounded text-light">
                    <p id="battleEvents"></p>
    
                </div>
            </row>
        </div>
    </div>
        <div class="container">
            <div class="row">
                <img id="spellOne" src="/images/fire-ray.png" class="icons col btn btn-success mx-auto">
                <img id="spellTwo" src="/images/moebius-star.png" class="icons col btn btn-warning mx-auto">
                <img id="spellThree" src="/images/skull-bolt.png" class="icons col btn btn-danger mx-auto">
                <img id="spellDefend" src="/images/magic-shield.png" class="icons col btn btn-light mx-auto">
                <img id="spellHeal" src="/images/healing.png" class="icons col btn btn-info mx-auto">
            </div>
            {{!-- <div class="row">
                <a href="dashboard" class="col btn btn-dark" id="run">Run</a>
            </div> --}}
        </div>
    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body bg-secondary text-light rounded">
        <h1>Results:</h1>
        <h2 id="resultModalBody"></h2>

        {{!-- <p class="text-center"><span id="upArrow" class="btn">&uarr;</span></p>
        <p class="text-center"><span id="leftArrow" class="btn"> &larr;</span> Enter which room? <span id="rightArrow" class="btn"> &rarr;</span</p>
        <p class="text-center"><span id="homeBtn" class="btn"><i class="fa fa-home"></i></span></p> --}}
        
      </div>
    </div>
  </div>
</div>
<div id="bg">
    <img id="bgImg" src="/images/battleBackground.jpg" alt="">
</div>

